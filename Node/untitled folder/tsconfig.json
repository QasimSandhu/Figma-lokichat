{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "templates"]
}